---
layout: layouts/default.njk
---
{% for item in pagination.items %}
  <article class="sm:mt-12 md:mt-20 clear-right">
    <time class="max-w-4xl">{{ item.date | polskadata }}</time>
    <h2 class="mb-3 sm:mb-6"><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
    {% if item.data.foto.plik %}
      <figure class="max-w-md lg:float-right lg:ml-12 px-6 sm:px-0 mt-8">
        <img src="/img/{{ item.data.foto.plik }}" alt="{{ item.data.foto.opis }}" class="bg-yellow-100 p-2 sm:p-3 shadow-lg rotate-r" loading="lazy">
      </figure>
    {% endif %}
    {{ item.template.frontMatter.content | truncate(180) | md | safe }}
  </article>
{% endfor %}
{% if pagination.href.previous or pagination.href.next %}
  <nav class="flex {% if not pagination.href.previous %}justify-end{% else %}justify-between{% endif %} mt-6 sm:mt-12 md:mt20">
    {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">&#9666;&nbsp;Nowsze</a>{% endif %}
    {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Starsze&nbsp;&#9656;</a>{% endif %}
  </nav>
{% endif %}